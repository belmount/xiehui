%ol.breadcrumb
  %li= link_to '控制面板', control_path
  %li.active 页面

%table.table
  %tr
    %th 标题
    %th 编辑时间
    %th 页面类型
    %th
    %th
    %th

  - @pages.each do |page|
    %tr
      %td= page.title
      %td= page.edit_at
      %td= page.category.full_name
      %td= link_to '内容', page
      %td= link_to glyphicon('edit'), edit_page_path(page)
      %td= link_to glyphicon('remove'), page, :method => :delete, :data => { :confirm => '确认删除?' }

%br

= link_to '+新建页面', new_page_path, :class=>'btn btn-success'
