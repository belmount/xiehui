%ol.breadcrumb
  %li= link_to '控制面板', control_path
  %li= link_to '会员单位', members_path
  %li= link_to @member.name, @member
  %li.active 缴费情况

%table.table
  %tr
    %th 缴费年度
    %th 缴费时间
    %th
    %th

  - @fees.each do |fee|
    %tr
      %td= fee.year
      %td= fee.pay_at
      %td= link_to '编辑', edit_member_fee_path(@member,fee)
      %td= link_to icon('trash-o'), [@member,fee], :method => :delete, :data => { :confirm => '确认删除?' }


= link_to '+新增缴费情况', new_member_fee_path(@member), class: 'btn btn-success'
