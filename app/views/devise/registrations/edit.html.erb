<%=render 'home/control_left_nav' %>

<div class='row'>
  <div class='col-sm-4'>
    <ol class='breadcrumb'>
      <li><%=link_to '控制面板', control_path %></li>
      <li class='active'>更改密码</li>
    </ol>

    <%= simple_form_for(resource, as: resource_name, url: user_registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= f.error_notification %>

      <%= f.input :reset_password_token, as: :hidden %>
      <%= f.full_error :reset_password_token %>

      <div class="form-inputs">
        <%= f.input :password, label: "新密码", required: true, autofocus: true, input_html: {:class=> 'form-control'} %>
        <%= f.input :password_confirmation, label: "密码确认", required: true,  input_html: {:class=> 'form-control'} %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "保存" %>
      </div>
    <% end %>
  </div>
</div>
