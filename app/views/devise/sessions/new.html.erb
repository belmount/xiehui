<div class='panel panel-default'>
  <div class='panel-heading'>
    <h4 class='text-center'><span class='glyphicon glyphicon-user'> </span>登陆</h4>
  </div>
  <div class="panel-body">
    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <%= f.input :email, label:'邮箱', required: false, autofocus: true, input_html:{:class=>'form-control'} %>
        <%= f.input :password, label: '密码', required: false,input_html:{:class=>'form-control'} %>
       <div class="checkbox">
        <label>
          <input id="user_remember_me" name="user[remember_me]" type="checkbox">记住密码
        </label>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "登陆", :class => 'btn btn-primary' %>
      </div>
    <% end %>

  <%= render "devise/shared/links" %>

  </div>
</div>

