%h2 用户管理
%table.table.table-stripped
  %tr
    %th email
    %th
    %th

  - @admin_users.each do |admin_user|
    %tr
      %td= admin_user.email
      %td= link_to glyphicon('edit'), edit_admin_user_path(admin_user)
      %td= link_to glyphicon('remove'), [:admin, admin_user], :method => :delete, :data => { :confirm => 'Are you sure?' }

%br

= link_to '+用户', new_admin_user_path, {:class => 'btn btn-success'}
