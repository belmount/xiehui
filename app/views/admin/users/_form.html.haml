= simple_form_for [:admin, @admin_user] do |f|
  - if @admin_user.errors.any?
    #error_explanation
      %h2= "保存时出现#{@admin_user.errors.count}错误"
      %ul
        - @admin_user.errors.full_messages.each do |msg|
          %li= msg
  = f.input :email, input_html: {:class=> 'form-control'}
  = f.input :password, label: :密码, input_html: {:class=> 'form-control'}
  = f.input :role, label: :角色, collection: User::ROLES, label_method: :last, value_method: :first
  = f.input :member, label: :会员, as: :hidden
  .actions
    = f.submit '保存'
